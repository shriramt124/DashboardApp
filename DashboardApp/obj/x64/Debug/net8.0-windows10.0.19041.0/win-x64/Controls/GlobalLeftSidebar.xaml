
<UserControl
    x:Class="DashboardApp.Controls.GlobalLeftSidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="72"
    Background="#0D1117">

    <UserControl.Resources>
        <Style x:Key="ModernSidebarToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#7D8590"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="BackgroundBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Margin="0">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="BackgroundBorder"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#21262D"
                                                            Duration="0:0:0.15"/>
                                            <ColorAnimation Storyboard.TargetName="IconPresenter"
                                                            Storyboard.TargetProperty="(ContentPresenter.Foreground).(SolidColorBrush.Color)"
                                                            To="#F0F6FC"
                                                            Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="BackgroundBorder"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#1F6FEB"
                                                            Duration="0:0:0.1"/>
                                            <ColorAnimation Storyboard.TargetName="IconPresenter"
                                                            Storyboard.TargetProperty="(ContentPresenter.Foreground).(SolidColorBrush.Color)"
                                                            To="#FFFFFF"
                                                            Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="CheckedPointerOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="BackgroundBorder"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#388BFD"
                                                            Duration="0:0:0.1"/>
                                            <ColorAnimation Storyboard.TargetName="IconPresenter"
                                                            Storyboard.TargetProperty="(ContentPresenter.Foreground).(SolidColorBrush.Color)"
                                                            To="#FFFFFF"
                                                            Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="IconPresenter"
                                              Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Logo Section -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Width="40" Height="40" CornerRadius="8" Background="#1F6FEB">
                <TextBlock Text="P" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>
        </StackPanel>

        <!-- Navigation Icons -->
        <StackPanel Grid.Row="1" Spacing="8" Margin="12,20,12,0">
            <ToggleButton x:ConnectionId='12' x:Name="DashboardsButton"
                          Style="{StaticResource ModernSidebarToggleButtonStyle}" 
                          ToolTipService.ToolTip="Dashboards"
                          ToolTipService.Placement="Right"
                                                   >
                <FontIcon Glyph="&#xE80F;" FontSize="20"/>
            </ToggleButton>

            <ToggleButton x:ConnectionId='13' x:Name="DataManagementButton"
                          Style="{StaticResource ModernSidebarToggleButtonStyle}" 
                          ToolTipService.ToolTip="Data Management"
                          ToolTipService.Placement="Right"
                          IsChecked="True"
                                                       >
                <FontIcon Glyph="&#xE9A5;" FontSize="20"/>
            </ToggleButton>

            <ToggleButton x:ConnectionId='14' x:Name="AnalyticsButton"
                          Style="{StaticResource ModernSidebarToggleButtonStyle}" 
                          ToolTipService.ToolTip="Analytics"
                          ToolTipService.Placement="Right"
                                                  >
                <FontIcon Glyph="&#xE9D9;" FontSize="20"/>
            </ToggleButton>

            <ToggleButton x:ConnectionId='15' x:Name="SecurityButton"
                          Style="{StaticResource ModernSidebarToggleButtonStyle}" 
                          ToolTipService.ToolTip="Security"
                          ToolTipService.Placement="Right"
                                                 >
                <FontIcon Glyph="&#xE72E;" FontSize="20"/>
            </ToggleButton>

            <ToggleButton x:ConnectionId='16' x:Name="ReportsButton"
                          Style="{StaticResource ModernSidebarToggleButtonStyle}" 
                          ToolTipService.ToolTip="Reports"
                          ToolTipService.Placement="Right"
                                                >
                <FontIcon Glyph="&#xE74C;" FontSize="20"/>
            </ToggleButton>

            <ToggleButton x:ConnectionId='17' x:Name="ToolsButton"
                          Style="{StaticResource ModernSidebarToggleButtonStyle}" 
                          ToolTipService.ToolTip="Tools"
                          ToolTipService.Placement="Right"
                                              >
                <FontIcon Glyph="&#xE90F;" FontSize="20"/>
            </ToggleButton>
        </StackPanel>

        <!-- Bottom Actions -->
        <StackPanel Grid.Row="2" Spacing="8" Margin="12,0,12,20">
            <ToggleButton x:ConnectionId='10' x:Name="SettingsButton"
                          Style="{StaticResource ModernSidebarToggleButtonStyle}" 
                          ToolTipService.ToolTip="Settings"
                          ToolTipService.Placement="Right"
                                                 >
                <FontIcon Glyph="&#xE713;" FontSize="20"/>
            </ToggleButton>

            <ToggleButton x:ConnectionId='11' x:Name="HelpButton"
                          Style="{StaticResource ModernSidebarToggleButtonStyle}" 
                          ToolTipService.ToolTip="Help"
                          ToolTipService.Placement="Right"
                                             >
                <FontIcon Glyph="&#xE9CE;" FontSize="20"/>
            </ToggleButton>
        </StackPanel>
    </Grid>
</UserControl>

