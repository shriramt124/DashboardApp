<Page
    x:Class="DashboardApp.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#0D1117">

    <Grid>
        <!-- Background Pattern -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0D1117" Offset="0"/>
                <GradientStop Color="#161B22" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Content - Increased MaxWidth from 1200 to 1400 -->
        <Grid MaxWidth="1400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Increased width and padding for more spacious layout -->
            <Border Background="#161B22" 
                    CornerRadius="12" 
                    BorderBrush="#30363D" 
                    BorderThickness="1"
                    Padding="50"
                    MinWidth="520"
                    MaxWidth="600">
                <StackPanel Spacing="32">
                    <!-- Header -->
                    <StackPanel Spacing="20" HorizontalAlignment="Center">
                        <!-- Logo/Icon - Slightly larger -->
                        <Border Background="#1F6FEB" 
                                CornerRadius="10" 
                                Padding="16" 
                                HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE77B;" 
                                     Foreground="White" 
                                     FontSize="28"/>
                        </Border>

                        <!-- Title -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Welcome to Pravea" 
                                      Foreground="#F0F6FC" 
                                      FontSize="28" 
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Enterprise Management Platform" 
                                      Foreground="#7D8590" 
                                      FontSize="14"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Login Form - Increased spacing and padding -->
                    <StackPanel Spacing="24" MinWidth="440">
                        <!-- Username Field -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Username" 
                                      Foreground="#F0F6FC" 
                                      FontSize="14" 
                                      FontWeight="Medium"/>
                            <Border Background="#0D1117" 
                                    BorderBrush="#30363D" 
                                    BorderThickness="1"
                                    CornerRadius="6" 
                                    Padding="14"
                                    MinHeight="48">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Grid.Column="0" 
                                             Glyph="&#xE77B;" 
                                             Foreground="#7D8590" 
                                             FontSize="16"
                                             VerticalAlignment="Center"
                                             Margin="0,0,12,0"/>
                                    <TextBox x:ConnectionId='8' x:Name="UsernameTextBox"
                                            Grid.Column="1" 
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            Foreground="#F0F6FC"
                                            PlaceholderText="Enter your username"
                                            PlaceholderForeground="#7D8590"
                                            VerticalAlignment="Center"
                                            FontSize="14"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Password Field -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Password" 
                                      Foreground="#F0F6FC" 
                                      FontSize="14" 
                                      FontWeight="Medium"/>
                            <Border Background="#0D1117" 
                                    BorderBrush="#30363D" 
                                    BorderThickness="1"
                                    CornerRadius="6" 
                                    Padding="14"
                                    MinHeight="48">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Grid.Column="0" 
                                             Glyph="&#xE72E;" 
                                             Foreground="#7D8590" 
                                             FontSize="16"
                                             VerticalAlignment="Center"
                                             Margin="0,0,12,0"/>
                                    <PasswordBox x:ConnectionId='5' x:Name="PasswordTextBox"
                                                Grid.Column="1" 
                                                Background="Transparent" 
                                                BorderThickness="0"
                                                Foreground="#F0F6FC"
                                                PlaceholderText="Enter your password"
                                                VerticalAlignment="Center"
                                                FontSize="14"/>
                                    <Button x:ConnectionId='6' x:Name="ShowPasswordButton"
                                           Grid.Column="2"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Padding="8"
                                                                           >
                                        <FontIcon x:ConnectionId='7' x:Name="ShowPasswordIcon"
                                                 Glyph="&#xE7B3;" 
                                                 Foreground="#7D8590" 
                                                 FontSize="16"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Remember Me -->
                        <CheckBox x:ConnectionId='2' x:Name="RememberMeCheckBox" 
                                 Content="Remember me" 
                                 Foreground="#F0F6FC"
                                 FontSize="14"
                                 Margin="0,4,0,0"/>

                        <!-- Error Message -->
                        <TextBlock x:ConnectionId='3' x:Name="ErrorMessageTextBlock"
                                  Text=""
                                  Foreground="#F85149"
                                  FontSize="14"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Center"
                                  TextWrapping="Wrap"/>

                        <!-- Login Button - Larger and more prominent -->
                        <Button x:ConnectionId='4' x:Name="LoginButton"
                               Background="#238636" 
                               Foreground="White" 
                               Padding="0,16" 
                               CornerRadius="6"
                               FontWeight="Medium"
                               FontSize="14"
                               HorizontalAlignment="Stretch"
                               MinHeight="48"
                                                        >
                            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE8AB;" FontSize="16"/>
                                <TextBlock Text="Sign In" FontSize="15"/>
                            </StackPanel>
                        </Button>

                        <!-- Demo Credentials Info - More spacious -->
                        <Border Background="#21262D" 
                               CornerRadius="6" 
                               Padding="18"
                               BorderBrush="#30363D"
                               BorderThickness="1"
                               Margin="0,8,0,0">
                            <StackPanel Spacing="10">
                                <TextBlock Text="Demo Credentials:" 
                                          Foreground="#58A6FF" 
                                          FontSize="13" 
                                          FontWeight="Medium"/>
                                <TextBlock Text="Username: admin | Password: admin123" 
                                          Foreground="#7D8590" 
                                          FontSize="12"/>
                                <TextBlock Text="Username: user | Password: user123" 
                                          Foreground="#7D8590" 
                                          FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

