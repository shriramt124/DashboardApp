
<Page
    x:Class="DashboardApp.Views.SplashScreenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#0D1117">

    <Grid>
        <!-- Background overlay -->
        <Rectangle Fill="#0D1117" Opacity="0.95"/>
        
        <!-- Main content -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="40">
            <!-- App Logo/Icon -->
            <StackPanel HorizontalAlignment="Center" Spacing="16">
                <Border Background="#1F6FEB" CornerRadius="16" Padding="24" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE716;" Foreground="White" FontSize="48"/>
                </Border>
                <TextBlock Text="Dashboard App" 
                          Foreground="#F0F6FC" 
                          FontSize="32" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Enterprise Management Platform" 
                          Foreground="#7D8590" 
                          FontSize="16"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Loading Progress -->
            <StackPanel Spacing="24" MinWidth="400">
                <!-- Progress Bar -->
                <StackPanel Spacing="8">
                    <Grid>
                        <TextBlock Text="Loading..." 
                                  Foreground="#F0F6FC" 
                                  FontSize="14" 
                                  HorizontalAlignment="Left"/>
                        <TextBlock x:ConnectionId='6' x:Name="ProgressText" 
                                  Text="0%" 
                                  Foreground="#58A6FF" 
                                  FontSize="14" 
                                  HorizontalAlignment="Right"/>
                    </Grid>
                    <ProgressBar x:ConnectionId='5' x:Name="LoadingProgressBar" 
                                Value="0" 
                                Maximum="100" 
                                Background="#21262D"
                                Foreground="#58A6FF"
                                Height="6"
                                CornerRadius="3"/>
                </StackPanel>

                <!-- Dependencies Status -->
                <Border Background="#161B22" 
                        BorderBrush="#30363D" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Initializing Dependencies" 
                                  Foreground="#F0F6FC" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"/>
                        
                        <StackPanel x:ConnectionId='4' x:Name="DependenciesStack" Spacing="12">
                            <!-- Dynamic dependency items will be added here -->
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>

        <!-- Loading spinner in corner -->
        <StackPanel Orientation="Horizontal" 
                   Spacing="8" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Bottom" 
                   Margin="24">
            <ProgressRing x:ConnectionId='2' x:Name="LoadingSpinner" 
                         IsActive="True" 
                         Width="20" 
                         Height="20" 
                         Foreground="#58A6FF"/>
            <TextBlock x:ConnectionId='3' x:Name="CurrentLoadingText" 
                      Text="Starting up..." 
                      Foreground="#7D8590" 
                      FontSize="12" 
                      VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>

