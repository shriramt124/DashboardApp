<Page
    x:Class="DashboardApp.Views.SplashScreenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#0D1117">

    <Grid>
        <!-- Main content centered -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="40">
            <!-- App Logo/Icon -->
            <StackPanel HorizontalAlignment="Center" Spacing="16">
                <Border Background="#1F6FEB" CornerRadius="16" Padding="24" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE716;" Foreground="White" FontSize="48"/>
                </Border>
                <TextBlock Text="Dashboard App" 
                          Foreground="#F0F6FC" 
                          FontSize="32" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Enterprise Management Platform" 
                          Foreground="#7D8590" 
                          FontSize="16"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Loading Progress -->
            <StackPanel Spacing="20" MinWidth="350">
                <!-- Progress Bar -->
                <StackPanel Spacing="8">
                    <Grid>
                        <TextBlock Text="Loading..." 
                                  Foreground="#F0F6FC" 
                                  FontSize="14" 
                                  HorizontalAlignment="Left"/>
                        <TextBlock x:ConnectionId='8' x:Name="ProgressText" 
                                  Text="0%" 
                                  Foreground="#58A6FF" 
                                  FontSize="14" 
                                  HorizontalAlignment="Right"/>
                    </Grid>
                    <ProgressBar x:ConnectionId='7' x:Name="LoadingProgressBar" 
                                Value="0" 
                                Maximum="100" 
                                Background="#21262D"
                                Foreground="#58A6FF"
                                Height="6"
                                CornerRadius="3"/>
                </StackPanel>

                <!-- Current Loading Item -->
                <StackPanel Spacing="12">
                    <StackPanel x:ConnectionId='2' x:Name="CurrentLoadingItem" Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                        <ProgressRing x:ConnectionId='5' x:Name="CurrentSpinner" 
                                     Width="16" 
                                     Height="16" 
                                     IsActive="True" 
                                     Foreground="#58A6FF"/>
                        <TextBlock x:ConnectionId='6' x:Name="CurrentLoadingText" 
                                  Text="Starting up..." 
                                  Foreground="#F0F6FC" 
                                  FontSize="14"/>
                    </StackPanel>

                    <!-- Completed Dependencies -->
                    <StackPanel x:ConnectionId='3' x:Name="CompletedDependencies" Spacing="8" MaxHeight="120">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
                            <StackPanel x:ConnectionId='4' x:Name="CompletedStack" Spacing="6"/>
                        </ScrollViewer>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

