
<Page
    x:Class="DashboardApp.Views.ActiveDirectoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#0D1117">

	<Grid Padding="24">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="300"/>
		</Grid.ColumnDefinitions>

		<StackPanel Grid.Column="0" Spacing="24" Margin="0,0,24,0">
			<!-- Header Section -->
			<StackPanel Spacing="8">
				<StackPanel Orientation="Horizontal" Spacing="12">
					<Border Background="#1F6FEB" CornerRadius="8" Padding="8">
						<FontIcon Glyph="&#xE716;" Foreground="White" FontSize="20"/>
					</Border>
					<StackPanel VerticalAlignment="Center">
						<TextBlock Text="Active Directory Overview"
                                   Foreground="#F0F6FC"
                                   FontSize="28" 
                                   FontWeight="SemiBold"/>
						<TextBlock Text="Recover and restore your Active Directory forest"
                                   Foreground="#7D8590" 
                                   FontSize="14"
                                   Margin="0,4,0,0"/>
					</StackPanel>
				</StackPanel>
			</StackPanel>

			<!-- Stats Cards -->
			<Grid ColumnDefinitions="*,*,*" ColumnSpacing="16">
				<Border Grid.Column="0" Background="#161B22" CornerRadius="12" Padding="20" BorderBrush="#30363D" BorderThickness="1">
					<StackPanel Spacing="8">
						<TextBlock Text="1" Foreground="#58A6FF" FontSize="32" FontWeight="Bold"/>
						<TextBlock Text="Active Directory Forest" Foreground="#F0F6FC" FontSize="14" FontWeight="Medium"/>
						<TextBlock Text="in Isolation Environment" Foreground="#7D8590" FontSize="12"/>
					</StackPanel>
				</Border>
				<Border Grid.Column="1" Background="#161B22" CornerRadius="12" Padding="20" BorderBrush="#30363D" BorderThickness="1">
					<StackPanel Spacing="8">
						<TextBlock Text="3" Foreground="#58A6FF" FontSize="32" FontWeight="Bold"/>
						<TextBlock Text="Active Directory Domains" Foreground="#F0F6FC" FontSize="14" FontWeight="Medium"/>
						<TextBlock Text="Defined in the forest" Foreground="#7D8590" FontSize="12"/>
					</StackPanel>
				</Border>
				<Border Grid.Column="2" Background="#161B22" CornerRadius="12" Padding="20" BorderBrush="#30363D" BorderThickness="1">
					<StackPanel Spacing="8">
						<TextBlock Text="5" Foreground="#58A6FF" FontSize="32" FontWeight="Bold"/>
						<TextBlock Text="Domain Controllers" Foreground="#F0F6FC" FontSize="14" FontWeight="Medium"/>
						<TextBlock Text="Defined in the forest" Foreground="#7D8590" FontSize="12"/>
					</StackPanel>
				</Border>
			</Grid>

			<!-- Data Table Section -->
			<Border Background="#161B22" CornerRadius="12" BorderBrush="#30363D" BorderThickness="1" Padding="0">
				<StackPanel>
					<!-- Table Header -->
					<Grid Padding="20,16">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="300"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>

						<TextBlock Grid.Column="0" 
								   Text="Domain Controllers" 
								   Foreground="#F0F6FC" 
								   FontSize="18" 
								   FontWeight="SemiBold"
								   VerticalAlignment="Center"/>

						<StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
							<ComboBox Background="#0D1117" 
									  BorderBrush="#30363D" 
									  Foreground="#F0F6FC"
									  PlaceholderText="All Domains" 
									  MinWidth="140"
									  CornerRadius="6"/>
							<ComboBox Background="#0D1117" 
									  BorderBrush="#30363D" 
									  Foreground="#F0F6FC"
									  PlaceholderText="All Status" 
									  MinWidth="120"
									  CornerRadius="6"/>
							<Button Background="#238636" 
									Foreground="White" 
									Padding="12,8" 
									CornerRadius="6"
									FontWeight="Medium">
								<StackPanel Orientation="Horizontal" Spacing="6">
									<FontIcon Glyph="&#xE72C;" FontSize="14"/>
									<TextBlock Text="Refresh"/>
								</StackPanel>
							</Button>
						</StackPanel>
					</Grid>

					<Border BorderBrush="#30363D" BorderThickness="0,1,0,0">
						<!-- Horizontal Scrollable Table -->
						<ScrollViewer HorizontalScrollBarVisibility="Auto" 
									  VerticalScrollBarVisibility="Disabled"
									  ZoomMode="Disabled"
									  HorizontalScrollMode="Auto"
									  VerticalScrollMode="Disabled">
							<StackPanel MinWidth="800">
								<!-- Table Header Row -->
								<Grid Background="#21262D" Padding="20,12" MinWidth="800">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="80"/>
										<ColumnDefinition Width="120"/>
										<ColumnDefinition Width="180"/>
										<ColumnDefinition Width="150"/>
										<ColumnDefinition Width="140"/>
										<ColumnDefinition Width="120"/>
										<ColumnDefinition Width="180"/>
										<ColumnDefinition Width="80"/>
									</Grid.ColumnDefinitions>

									<TextBlock Grid.Column="0" Text="Type" Foreground="#7D8590" FontSize="12" FontWeight="Medium"/>
									<TextBlock Grid.Column="1" Text="Domain" Foreground="#7D8590" FontSize="12" FontWeight="Medium"/>
									<TextBlock Grid.Column="2" Text="Domain SID" Foreground="#7D8590" FontSize="12" FontWeight="Medium"/>
									<TextBlock Grid.Column="3" Text="Site" Foreground="#7D8590" FontSize="12" FontWeight="Medium"/>
									<TextBlock Grid.Column="4" Text="SAM Account" Foreground="#7D8590" FontSize="12" FontWeight="Medium"/>
									<TextBlock Grid.Column="5" Text="NetBIOS" Foreground="#7D8590" FontSize="12" FontWeight="Medium"/>
									<TextBlock Grid.Column="6" Text="FQDN" Foreground="#7D8590" FontSize="12" FontWeight="Medium"/>
									<TextBlock Grid.Column="7" Text="Status" Foreground="#7D8590" FontSize="12" FontWeight="Medium"/>
								</Grid>

								<!-- Table Rows -->
								<Border BorderBrush="#30363D" BorderThickness="0,1,0,0" Padding="20,16" MinWidth="800">
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="80"/>
											<ColumnDefinition Width="120"/>
											<ColumnDefinition Width="180"/>
											<ColumnDefinition Width="150"/>
											<ColumnDefinition Width="140"/>
											<ColumnDefinition Width="120"/>
											<ColumnDefinition Width="180"/>
											<ColumnDefinition Width="80"/>
										</Grid.ColumnDefinitions>

										<StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="6">
											<Border Background="#238636" CornerRadius="3" Padding="4,2">
												<TextBlock Text="Root" Foreground="White" FontSize="10" FontWeight="Medium"/>
											</Border>
										</StackPanel>
										<StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
											<FontIcon Glyph="&#xE968;" Foreground="#58A6FF" FontSize="14"/>
											<TextBlock Text="company.local" Foreground="#F0F6FC" FontSize="13"/>
										</StackPanel>
										<TextBlock Grid.Column="2" Text="S-1-5-21-237783..." Foreground="#F0F6FC" FontSize="13"/>
										<TextBlock Grid.Column="3" Text="Default-First-Site-Name" Foreground="#F0F6FC" FontSize="13"/>
										<TextBlock Grid.Column="4" Text="DC01" Foreground="#F0F6FC" FontSize="13"/>
										<TextBlock Grid.Column="5" Text="DC01" Foreground="#F0F6FC" FontSize="13"/>
										<TextBlock Grid.Column="6" Text="DC01.company.local" Foreground="#F0F6FC" FontSize="13"/>
										<Border Grid.Column="7" Background="#238636" CornerRadius="12" Padding="6,4" HorizontalAlignment="Center">
											<TextBlock Text="●" Foreground="White" FontSize="8"/>
										</Border>
									</Grid>
								</Border>

								<Border BorderBrush="#30363D" BorderThickness="0,1,0,0" Padding="20,16" MinWidth="800">
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="80"/>
											<ColumnDefinition Width="120"/>
											<ColumnDefinition Width="180"/>
											<ColumnDefinition Width="150"/>
											<ColumnDefinition Width="140"/>
											<ColumnDefinition Width="120"/>
											<ColumnDefinition Width="180"/>
											<ColumnDefinition Width="80"/>
										</Grid.ColumnDefinitions>

										<StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="6">
											<Border Background="#1F6FEB" CornerRadius="3" Padding="4,2">
												<TextBlock Text="Child" Foreground="White" FontSize="10" FontWeight="Medium"/>
											</Border>
										</StackPanel>
										<StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
											<FontIcon Glyph="&#xE968;" Foreground="#58A6FF" FontSize="14"/>
											<TextBlock Text="sales.company.local" Foreground="#F0F6FC" FontSize="13"/>
										</StackPanel>
										<TextBlock Grid.Column="2" Text="S-1-5-21-449556..." Foreground="#F0F6FC" FontSize="13"/>
										<TextBlock Grid.Column="3" Text="Sales-Site" Foreground="#F0F6FC" FontSize="13"/>
										<TextBlock Grid.Column="4" Text="SALLSDC" Foreground="#F0F6FC" FontSize="13"/>
										<TextBlock Grid.Column="5" Text="SALLSDC" Foreground="#F0F6FC" FontSize="13"/>
										<TextBlock Grid.Column="6" Text="salsdc.sales.company.local" Foreground="#F0F6FC" FontSize="13"/>
										<Border Grid.Column="7" Background="#238636" CornerRadius="12" Padding="6,4" HorizontalAlignment="Center">
											<TextBlock Text="●" Foreground="White" FontSize="8"/>
										</Border>
									</Grid>
								</Border>
							</StackPanel>
						</ScrollViewer>
					</Border>

					<!-- Table Footer -->
					<Grid Padding="20,16" BorderBrush="#30363D" BorderThickness="0,1,0,0">
						<Button Background="#238636" 
								Foreground="White" 
								Padding="16,10" 
								CornerRadius="6"
								FontWeight="Medium"
								HorizontalAlignment="Left">
							<StackPanel Orientation="Horizontal" Spacing="8">
								<FontIcon Glyph="&#xE896;" FontSize="14"/>
								<TextBlock Text="Export Data"/>
							</StackPanel>
						</Button>
					</Grid>
				</StackPanel>
			</Border>
		</StackPanel>

		<!-- Right Sidebar -->
		<Border Grid.Column="1" Background="#161B22" CornerRadius="12" BorderBrush="#30363D" BorderThickness="1" Padding="20">
			<StackPanel Spacing="24">
				<!-- Dependencies Section -->
				<StackPanel Spacing="16">
					<TextBlock Text="Dependencies" 
							   Foreground="#F0F6FC" 
							   FontSize="16" 
							   FontWeight="SemiBold"/>
					<StackPanel Spacing="12">
						<Grid ColumnDefinitions="*,Auto">
							<TextBlock Text="DNS Services" Foreground="#7D8590" FontSize="13"/>
							<Ellipse Grid.Column="1" Width="8" Height="8" Fill="#238636"/>
						</Grid>
						<Grid ColumnDefinitions="*,Auto">
							<TextBlock Text="LDAP Connection" Foreground="#7D8590" FontSize="13"/>
							<Ellipse Grid.Column="1" Width="8" Height="8" Fill="#238636"/>
						</Grid>
						<Grid ColumnDefinitions="*,Auto">
							<TextBlock Text="Kerberos Auth" Foreground="#7D8590" FontSize="13"/>
							<Ellipse Grid.Column="1" Width="8" Height="8" Fill="#238636"/>
						</Grid>
						<Grid ColumnDefinitions="*,Auto">
							<TextBlock Text="Replication" Foreground="#7D8590" FontSize="13"/>
							<Ellipse Grid.Column="1" Width="8" Height="8" Fill="#F85149"/>
						</Grid>
					</StackPanel>
				</StackPanel>

				<!-- Recent Activity Section -->
				<StackPanel Spacing="16">
					<TextBlock Text="Recent Activity" 
							   Foreground="#F0F6FC" 
							   FontSize="16" 
							   FontWeight="SemiBold"/>
					<StackPanel Spacing="16">
						<StackPanel Spacing="4">
							<TextBlock Text="Domain Controller Updated" Foreground="#F0F6FC" FontSize="13" FontWeight="Medium"/>
							<TextBlock Text="DC01.company.local" Foreground="#7D8590" FontSize="12"/>
							<TextBlock Text="4 min ago" Foreground="#7D8590" FontSize="11"/>
						</StackPanel>
						<StackPanel Spacing="4">
							<TextBlock Text="User Group Created" Foreground="#F0F6FC" FontSize="13" FontWeight="Medium"/>
							<TextBlock Text="Sales Users" Foreground="#7D8590" FontSize="12"/>
							<TextBlock Text="10 min ago" Foreground="#7D8590" FontSize="11"/>
						</StackPanel>
						<StackPanel Spacing="4">
							<TextBlock Text="Policy Warning" Foreground="#F85149" FontSize="13" FontWeight="Medium"/>
							<TextBlock Text="Password policy" Foreground="#7D8590" FontSize="12"/>
							<TextBlock Text="1 hour ago" Foreground="#7D8590" FontSize="11"/>
						</StackPanel>
						<StackPanel Spacing="4">
							<TextBlock Text="Backup Completed" Foreground="#238636" FontSize="13" FontWeight="Medium"/>
							<TextBlock Text="System state" Foreground="#7D8590" FontSize="12"/>
							<TextBlock Text="2 hours ago" Foreground="#7D8590" FontSize="11"/>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</StackPanel>
		</Border>
	</Grid>
</Page>

