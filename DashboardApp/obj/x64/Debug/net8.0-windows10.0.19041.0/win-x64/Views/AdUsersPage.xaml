
<Page
    x:Class="DashboardApp.Views.AdUsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundBrush}">

	<Grid Padding="20">
		<StackPanel Spacing="20">
			<StackPanel Orientation="Horizontal" Spacing="10">
				<FontIcon Glyph="&#xE77B;" Foreground="{StaticResource BrandPrimaryBrush}" FontSize="24"/>
				<TextBlock Text="Active Directory Users"
                           Style="{StaticResource BodyTextBlockStyle}"
                           FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>
			</StackPanel>

			<TextBlock Text="Manage and monitor user accounts in your Active Directory"
                       Style="{StaticResource SubtleTextBlockStyle}" Margin="34, -10, 0, 0"/>

			<StackPanel Orientation="Horizontal" Spacing="15">
				<Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" MinWidth="200">
					<StackPanel Spacing="5">
						<TextBlock Text="1,247" Foreground="{StaticResource BrandPrimaryBrush}" FontSize="24" FontWeight="Bold"/>
						<TextBlock Text="Total Users" Style="{StaticResource BodyTextBlockStyle}"/>
						<TextBlock Text="↑ 15 new this week" Style="{StaticResource SubtleTextBlockStyle}"/>
					</StackPanel>
				</Border>
				<Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" MinWidth="200">
					<StackPanel Spacing="5">
						<TextBlock Text="1,189" Foreground="{StaticResource BrandPrimaryBrush}" FontSize="24" FontWeight="Bold"/>
						<TextBlock Text="Active Users" Style="{StaticResource BodyTextBlockStyle}"/>
						<TextBlock Text="95.3% of total" Style="{StaticResource SubtleTextBlockStyle}"/>
					</StackPanel>
				</Border>
				<Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15" MinWidth="200">
					<StackPanel Spacing="5">
						<TextBlock Text="58" Foreground="Orange" FontSize="24" FontWeight="Bold"/>
						<TextBlock Text="Disabled Users" Style="{StaticResource BodyTextBlockStyle}"/>
						<TextBlock Text="Require cleanup" Style="{StaticResource SubtleTextBlockStyle}"/>
					</StackPanel>
				</Border>
			</StackPanel>

			<Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="15">
				<StackPanel Spacing="15">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>

						<AutoSuggestBox Grid.Column="0" PlaceholderText="Search users..." QueryIcon="Find" MinWidth="250" Margin="0,0,10,0"/>
						<TextBlock Grid.Column="1" Text="User Management" VerticalAlignment="Center" Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold"/>

						<ComboBox Grid.Column="2" PlaceholderText="All Groups" MinWidth="140" Margin="0,0,10,0"/>
						<ComboBox Grid.Column="3" PlaceholderText="All Status" MinWidth="120" Margin="0,0,10,0"/>
						<StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="5">
							<Button Content="Add User" Background="{StaticResource BrandPrimaryBrush}" Foreground="White" Padding="15,8"/>
							<Button Style="{StaticResource TextBlockButtonStyle}">
								<FontIcon Glyph="&#xE72C;" Foreground="{StaticResource BrandPrimaryBrush}"/>
							</Button>
						</StackPanel>
					</Grid>

					<Grid ColumnDefinitions="Auto,*,*,*,*,Auto" Margin="0,10,0,0">
						<Border Grid.Column="0" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}" Padding="5">
							<CheckBox IsEnabled="False"/>
						</Border>
						<Border Grid.Column="1" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}" Padding="5">
							<TextBlock Text="User" Style="{StaticResource SubtleTextBlockStyle}"/>
						</Border>
						<Border Grid.Column="2" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}" Padding="5">
							<TextBlock Text="Department" Style="{StaticResource SubtleTextBlockStyle}"/>
						</Border>
						<Border Grid.Column="3" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}" Padding="5">
							<TextBlock Text="Last Login" Style="{StaticResource SubtleTextBlockStyle}"/>
						</Border>
						<Border Grid.Column="4" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}" Padding="5">
							<TextBlock Text="Status" Style="{StaticResource SubtleTextBlockStyle}"/>
						</Border>
						<Border Grid.Column="5" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}" Padding="5">
							<TextBlock Text="Actions" Style="{StaticResource SubtleTextBlockStyle}"/>
						</Border>
					</Grid>

					<Grid ColumnDefinitions="Auto,*,*,*,*,Auto" Margin="0,5,0,0">
						<CheckBox Grid.Column="0" Margin="5"/>
						<StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
							<Ellipse Width="32" Height="32" Fill="{StaticResource BrandPrimaryBrush}"/>
							<StackPanel>
								<TextBlock Text="John Smith" Style="{StaticResource BodyTextBlockStyle}"/>
								<TextBlock Text="john.smith@company.com" Style="{StaticResource SubtleTextBlockStyle}"/>
							</StackPanel>
						</StackPanel>
						<TextBlock Grid.Column="2" Text="IT Department" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center"/>
						<TextBlock Grid.Column="3" Text="2 hours ago" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center"/>
						<Border Grid.Column="4" Background="Green" CornerRadius="12" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Center">
							<TextBlock Text="Active" Foreground="White" FontSize="12"/>
						</Border>
						<StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
							<Button Style="{StaticResource TextBlockButtonStyle}">
								<FontIcon Glyph="&#xE70F;" FontSize="14"/>
							</Button>
							<Button Style="{StaticResource TextBlockButtonStyle}">
								<FontIcon Glyph="&#xE74D;" FontSize="14"/>
							</Button>
						</StackPanel>
					</Grid>

					<Grid ColumnDefinitions="Auto,*,*,*,*,Auto" Margin="0,5,0,0">
						<CheckBox Grid.Column="0" Margin="5"/>
						<StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
							<Ellipse Width="32" Height="32" Fill="Orange"/>
							<StackPanel>
								<TextBlock Text="Sarah Johnson" Style="{StaticResource BodyTextBlockStyle}"/>
								<TextBlock Text="sarah.johnson@company.com" Style="{StaticResource SubtleTextBlockStyle}"/>
							</StackPanel>
						</StackPanel>
						<TextBlock Grid.Column="2" Text="Sales" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center"/>
						<TextBlock Grid.Column="3" Text="1 day ago" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center"/>
						<Border Grid.Column="4" Background="Green" CornerRadius="12" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Center">
							<TextBlock Text="Active" Foreground="White" FontSize="12"/>
						</Border>
						<StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
							<Button Style="{StaticResource TextBlockButtonStyle}">
								<FontIcon Glyph="&#xE70F;" FontSize="14"/>
							</Button>
							<Button Style="{StaticResource TextBlockButtonStyle}">
								<FontIcon Glyph="&#xE74D;" FontSize="14"/>
							</Button>
						</StackPanel>
					</Grid>

					<Button Content="Load More Users" HorizontalAlignment="Center" Margin="0,20,0,0"/>
				</StackPanel>
			</Border>
		</StackPanel>
	</Grid>
</Page>

