
<Page
    x:Class="DashboardApp.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#0D1117">

    <Grid>
        <!-- Background Pattern -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0D1117" Offset="0"/>
                <GradientStop Color="#161B22" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Content -->
        <Grid MaxWidth="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="#161B22" 
                    CornerRadius="12" 
                    BorderBrush="#30363D" 
                    BorderThickness="1"
                    Padding="32">
                <StackPanel Spacing="28">
                    <!-- Header -->
                    <StackPanel Spacing="16" HorizontalAlignment="Center">
                        <!-- Logo/Icon -->
                        <Border Background="#1F6FEB" 
                                CornerRadius="8" 
                                Padding="12" 
                                HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE77B;" 
                                     Foreground="White" 
                                     FontSize="24"/>
                        </Border>
                        
                        <!-- Title -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="Welcome to Pravea" 
                                      Foreground="#F0F6FC" 
                                      FontSize="24" 
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Enterprise Management Platform" 
                                      Foreground="#7D8590" 
                                      FontSize="13"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Login Form -->
                    <StackPanel Spacing="20">
                        <!-- Username Field -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Username" 
                                      Foreground="#F0F6FC" 
                                      FontSize="13" 
                                      FontWeight="Medium"/>
                            <Border Background="#0D1117" 
                                    BorderBrush="#30363D" 
                                    BorderThickness="1"
                                    CornerRadius="6" 
                                    Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Grid.Column="0" 
                                             Glyph="&#xE77B;" 
                                             Foreground="#7D8590" 
                                             FontSize="14"
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0"/>
                                    <TextBox x:Name="UsernameTextBox"
                                            Grid.Column="1" 
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            Foreground="#F0F6FC"
                                            PlaceholderText="Enter your username"
                                            PlaceholderForeground="#7D8590"
                                            VerticalAlignment="Center"
                                            FontSize="13"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Password Field -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="Password" 
                                      Foreground="#F0F6FC" 
                                      FontSize="13" 
                                      FontWeight="Medium"/>
                            <Border Background="#0D1117" 
                                    BorderBrush="#30363D" 
                                    BorderThickness="1"
                                    CornerRadius="6" 
                                    Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Grid.Column="0" 
                                             Glyph="&#xE72E;" 
                                             Foreground="#7D8590" 
                                             FontSize="14"
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0"/>
                                    <PasswordBox x:Name="PasswordTextBox"
                                                Grid.Column="1" 
                                                Background="Transparent" 
                                                BorderThickness="0"
                                                Foreground="#F0F6FC"
                                                PlaceholderText="Enter your password"
                                                VerticalAlignment="Center"
                                                FontSize="13"/>
                                    <Button x:Name="ShowPasswordButton"
                                           Grid.Column="2"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Padding="6"
                                           Click="ShowPasswordButton_Click">
                                        <FontIcon x:Name="ShowPasswordIcon"
                                                 Glyph="&#xE7B3;" 
                                                 Foreground="#7D8590" 
                                                 FontSize="14"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Remember Me -->
                        <CheckBox x:Name="RememberMeCheckBox" 
                                 Content="Remember me" 
                                 Foreground="#F0F6FC"
                                 FontSize="13"/>

                        <!-- Error Message -->
                        <TextBlock x:Name="ErrorMessageTextBlock"
                                  Text=""
                                  Foreground="#F85149"
                                  FontSize="13"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Center"
                                  TextWrapping="Wrap"/>

                        <!-- Login Button -->
                        <Button x:Name="LoginButton"
                               Background="#238636" 
                               Foreground="White" 
                               Padding="0,14" 
                               CornerRadius="6"
                               FontWeight="Medium"
                               FontSize="13"
                               HorizontalAlignment="Stretch"
                               Click="LoginButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE8AB;" FontSize="14"/>
                                <TextBlock Text="Sign In"/>
                            </StackPanel>
                        </Button>

                        <!-- Demo Credentials Info -->
                        <Border Background="#21262D" 
                               CornerRadius="6" 
                               Padding="14"
                               BorderBrush="#30363D"
                               BorderThickness="1">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Demo Credentials:" 
                                          Foreground="#58A6FF" 
                                          FontSize="12" 
                                          FontWeight="Medium"/>
                                <TextBlock Text="Username: admin | Password: admin123" 
                                          Foreground="#7D8590" 
                                          FontSize="11"/>
                                <TextBlock Text="Username: user | Password: user123" 
                                          Foreground="#7D8590" 
                                          FontSize="11"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
