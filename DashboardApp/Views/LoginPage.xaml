
<Page
    x:Class="DashboardApp.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#0D1117">

    <Grid>
        <!-- Background Pattern -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0D1117" Offset="0"/>
                <GradientStop Color="#161B22" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Content -->
        <Grid MaxWidth="450" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Background="#161B22" 
                    CornerRadius="16" 
                    BorderBrush="#30363D" 
                    BorderThickness="1"
                    Padding="40"
                    BoxShadow="0 8 32 rgba(0,0,0,0.4)">
                <StackPanel Spacing="32">
                    <!-- Header -->
                    <StackPanel Spacing="16" HorizontalAlignment="Center">
                        <!-- Logo/Icon -->
                        <Border Background="#1F6FEB" 
                                CornerRadius="12" 
                                Padding="16" 
                                HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE77B;" 
                                     Foreground="White" 
                                     FontSize="32"/>
                        </Border>
                        
                        <!-- Title -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Welcome to Pravea" 
                                      Foreground="#F0F6FC" 
                                      FontSize="28" 
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Enterprise Management Platform" 
                                      Foreground="#7D8590" 
                                      FontSize="14"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Login Form -->
                    <StackPanel Spacing="24">
                        <!-- Username Field -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Username" 
                                      Foreground="#F0F6FC" 
                                      FontSize="14" 
                                      FontWeight="Medium"/>
                            <Border Background="#0D1117" 
                                    BorderBrush="#30363D" 
                                    BorderThickness="1"
                                    CornerRadius="8" 
                                    Padding="16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Grid.Column="0" 
                                             Glyph="&#xE77B;" 
                                             Foreground="#7D8590" 
                                             FontSize="16"
                                             VerticalAlignment="Center"
                                             Margin="0,0,12,0"/>
                                    <TextBox x:Name="UsernameTextBox"
                                            Grid.Column="1" 
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            Foreground="#F0F6FC"
                                            PlaceholderText="Enter your username"
                                            PlaceholderForeground="#7D8590"
                                            VerticalAlignment="Center"
                                            FontSize="14"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Password Field -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Password" 
                                      Foreground="#F0F6FC" 
                                      FontSize="14" 
                                      FontWeight="Medium"/>
                            <Border Background="#0D1117" 
                                    BorderBrush="#30363D" 
                                    BorderThickness="1"
                                    CornerRadius="8" 
                                    Padding="16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Grid.Column="0" 
                                             Glyph="&#xE72E;" 
                                             Foreground="#7D8590" 
                                             FontSize="16"
                                             VerticalAlignment="Center"
                                             Margin="0,0,12,0"/>
                                    <PasswordBox x:Name="PasswordTextBox"
                                                Grid.Column="1" 
                                                Background="Transparent" 
                                                BorderThickness="0"
                                                Foreground="#F0F6FC"
                                                PlaceholderText="Enter your password"
                                                VerticalAlignment="Center"
                                                FontSize="14"/>
                                    <Button x:Name="ShowPasswordButton"
                                           Grid.Column="2"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Padding="8"
                                           Click="ShowPasswordButton_Click">
                                        <FontIcon x:Name="ShowPasswordIcon"
                                                 Glyph="&#xE7B3;" 
                                                 Foreground="#7D8590" 
                                                 FontSize="16"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Remember Me -->
                        <CheckBox x:Name="RememberMeCheckBox" 
                                 Content="Remember me" 
                                 Foreground="#F0F6FC"
                                 FontSize="14"/>

                        <!-- Error Message -->
                        <TextBlock x:Name="ErrorMessageTextBlock"
                                  Text=""
                                  Foreground="#F85149"
                                  FontSize="14"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Center"/>

                        <!-- Login Button -->
                        <Button x:Name="LoginButton"
                               Background="#238636" 
                               Foreground="White" 
                               Padding="16,12" 
                               CornerRadius="8"
                               FontWeight="Medium"
                               FontSize="14"
                               HorizontalAlignment="Stretch"
                               Click="LoginButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE8AB;" FontSize="16"/>
                                <TextBlock Text="Sign In"/>
                            </StackPanel>
                        </Button>

                        <!-- Register Link -->
                        <StackPanel Orientation="Horizontal" 
                                   Spacing="8" 
                                   HorizontalAlignment="Center">
                            <TextBlock Text="Don't have an account?" 
                                      Foreground="#7D8590" 
                                      FontSize="14"/>
                            <Button x:Name="RegisterButton"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Padding="0"
                                   Click="RegisterButton_Click">
                                <TextBlock Text="Sign up" 
                                          Foreground="#58A6FF" 
                                          FontSize="14"
                                          TextDecorations="Underline"/>
                            </Button>
                        </StackPanel>

                        <!-- Demo Credentials Info -->
                        <Border Background="#21262D" 
                               CornerRadius="8" 
                               Padding="16"
                               BorderBrush="#30363D"
                               BorderThickness="1">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Demo Credentials:" 
                                          Foreground="#58A6FF" 
                                          FontSize="12" 
                                          FontWeight="Medium"/>
                                <TextBlock Text="Username: admin / Password: admin123" 
                                          Foreground="#7D8590" 
                                          FontSize="11"/>
                                <TextBlock Text="Username: user / Password: user123" 
                                          Foreground="#7D8590" 
                                          FontSize="11"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
