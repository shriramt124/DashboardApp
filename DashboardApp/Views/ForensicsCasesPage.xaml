
<Page x:Class="DashboardApp.Views.ForensicsCasesPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="{StaticResource BackgroundBrush}">
    <Grid Padding="20">
        <StackPanel Spacing="20">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <FontIcon Glyph="&#xE7C5;" Foreground="{StaticResource BrandPrimaryBrush}" FontSize="24"/>
                <TextBlock Text="Forensics Cases" Style="{StaticResource BodyTextBlockStyle}" FontSize="24" FontWeight="SemiBold"/>
            </StackPanel>
            <TextBlock Text="Manage and track digital forensics investigation cases" Style="{StaticResource SubtleTextBlockStyle}"/>
            <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" Padding="40" HorizontalAlignment="Center">
                <TextBlock Text="Cases Management Coming Soon..." Style="{StaticResource BodyTextBlockStyle}" FontSize="18"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>
